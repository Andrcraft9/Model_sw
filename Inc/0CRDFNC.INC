C  INTERPOLATION WEIGHT FUNCTIONS FOR GRID COORDINATES

      REAL(8) LONGITUDE, LATITUDE  
      REAL(8) FNCLON,FNCLAT
        
      FNCLON(LONGITUDE)=LONGITUDE

C   BILINEAR INTERPOLATION
c      FNCLAT(LATITUDE) =LATITUDE
      REAL(8) DPI_180
	  PARAMETER(DPI_180=3.1415926535897/180.0D00)
C   HARMONIC INTERPOLATION
      FNCLAT(LATITUDE)=DLOG((1D0+DSIN(DPI_180*LATITUDE))
     &                     /(1D0-DSIN(DPI_180*LATITUDE)))
